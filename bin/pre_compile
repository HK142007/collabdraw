FFMPEG_BINARY="https://s3.amazonaws.com/heroku-anand/binaries/ffmpeg.tgz"
FFMPEG_VENDOR="vendor/ffmpeg"

# vendor ffmpeg
mkdir -p $BUILD_DIR/$FFMPEG_VENDOR
curl $FFMPEG_BINARY -o - | tar -xz -C $BUILD_DIR/$FFMPEG_VENDOR -f -


